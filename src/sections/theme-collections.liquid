<div data-section-id="{{ section.id }}" data-section-type="theme-collection-section">
  <div class="page-width">
    {% for block in section.blocks %}
      <div class="theme-collection section--{{ section.settings.section_size }}" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
        <div class="grid__row--md">
          <div class="grid__item--7 grid__content">
            <figure class="theme-collection__figure {% if block.settings.frame_active %}theme-collection__frame--{{ block.settings.frame_position }}{% endif %}">
              <img class="theme-collection__image lazyload"
                      {% assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                   src="{{ block.settings.image | img_url: '1000x' }}"
                   data-src="{{ img_url }}"
                   data-widths="[540, 900, 1512, 2048]"
                   data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                   data-sizes="auto"
                   data-parent-fit="cover"
                   alt="{{ block.settings.image.alt | escape }}">
              <h1 class="theme-collection__label">
                {{ block.settings.title }}
              </h1>
              <div class="theme-collection__quote">
                {{ block.settings.image_text }}
              </div>
              {% if block.settings.frame_active %}
                <figure class="theme-collection__figure theme-collection__frame">
                  <img class="theme-collection__frame-img lazyload"
                          {% assign img_url = block.settings.frame | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                       src="{{ block.settings.frame | img_url: '300x' }}"
                       data-src="{{ img_url }}"
                       data-widths="[540, 900, 1512, 2048]"
                       data-aspectratio="{{ block.settings.frame.aspect_ratio }}"
                       data-sizes="auto"
                       data-parent-fit="cover"
                       alt="{{ block.settings.frame.alt | escape }}">
                </figure>
              {% endif %}
            </figure>
          </div>
          <div class="grid__item--5 grid__content text-right">
            <figure class="theme-collection__figure theme-collection__frame--2">
              <img class="theme-collection__frame-img lazyload"
                      {% assign img_url = block.settings.frame | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                   src="{{ block.settings.frame | img_url: '300x' }}"
                   data-src="{{ img_url }}"
                   data-widths="[540, 900, 1512, 2048]"
                   data-aspectratio="{{ block.settings.frame.aspect_ratio }}"
                   data-sizes="auto"
                   data-parent-fit="cover"
                   alt="{{ block.settings.frame.alt | escape }}">
            </figure>
            <h2 class="theme-collection__title">
              {{ block.settings.title }}
            </h2>
            <div class="theme-collection__description">
              {{ block.settings.description }}
            </div>
            {% if block.settings.button_text != blank %}
              <div class="theme-collection__button">
                <a href="{{ block.settings.button_url }}" class="button">{{ block.settings.button_text }}</a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% comment %}{#<!--@formatter:off-->#}{% endcomment %}
{% schema %}
{
  "name": "Theme Collections",
  "class": "index-section index-section--theme-collection",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Title",
      "default": "Theme Collections"
    },
    {
      "type": "select",
      "id": "section_size",
      "label": "Section spacing",
      "default": "medium",
      "options": [
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        },
        {
          "label": "Extra Large",
          "value": "x-large"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "theme",
      "name": "Theme",
      "settings": [
        {
          "type": "header",
          "content": "Theme"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Theme",
          "default": "Classic"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Theme Description"
        },
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "image_text",
          "label": "Image Text"
        },
        {
          "type": "header",
          "content": "Frame"
        },
        {
          "type": "image_picker",
          "id": "frame",
          "label": "Frame Image"
        },
        {
          "type": "checkbox",
          "id": "frame_active",
          "label": "Frame Over Image",
          "default": true
        },
        {
          "type": "select",
          "id": "frame_position",
          "label": "Frame Placement",
          "default": "top-right",
          "options": [
            {
              "label": "Top Right",
              "value": "top-right"
            },
            {
              "label": "Bottom Right",
              "value": "bottom-right"
            }
          ]
        },
        {
          "type": "header",
          "content": "Call to Action Button"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Theme Collection",
      "category": "Section"
    }
  ]
}
{% endschema %}
{% comment %}{#<!--@formatter:on-->#}{% endcomment %}
