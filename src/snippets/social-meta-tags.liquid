<!-- /snippets/social-meta-tags.liquid -->
{% comment %}
Open graph tags
{% endcomment %}
<meta property="og:updated_time" content="{{ 'now' | date: "%Y-%m-%d %H:%M:%S %z" }}"/>
{% if template.name == 'index' %}
  <meta property="fb:app_id" content="357106174750275">
  <meta property="og:title" content="{{ page_title }}">
  <meta property="og:type" content="product">
  {% if sharing_image != blank %}
    <meta id="og__image" property="og:image" content="{{ sharing_image | replace: 'https', 'http' }}">
    <meta id="og__image--secure" property="og:image:secure_url" content="{{ sharing_image }}">
    <meta property="og:image:width" content="1200px">
    <meta property="og:image:height" content="330px">
  {% else %}
    <meta id="og__image" property="og:image" content="http://cdn.shopify.com/s/files/1/2255/6083/files/logo_a3c60d53-b047-4bb0-afa8-3a9cf37fc092.png?v=1507797463">
    <meta id="og__image--secure" property="og:image:secure_url" content=https://cdn.shopify.com/s/files/1/2255/6083/files/logo_a3c60d53-b047-4bb0-afa8-3a9cf37fc092.png?v=1507797463">
    <meta property="og:image:width" content="1200px">
    <meta property="og:image:height" content="330px">
  {% endif %}
  <meta id="og__description" property="og:description" content="{{ page_description | strip_html | escape }}">
  <meta id="og__price" property="og:price:amount" content="$179.99">
  <meta id="og__currency" property="og:price:currency" content="USD">
{% elsif template.name == 'article' %}
  <meta property="og:type" content="article">
  <meta property="og:title" content="{{ article.title | strip_html | escape }}">
  {% if article.image %}
    <meta property="og:image" content="http:{{ article | img_url: '1024x1024' }}">
    <meta property="og:image:secure_url" content="https:{{ article | img_url: '1024x1024' }}">
  {% endif %}
  <meta property="og:description" content="{{ article.excerpt_or_content | strip_html | escape }}">
{% endif %}
{% if sharing_image != blank %}
  <meta property="og:url" content="https://{{ fullUrl }}">
{% else %}
  <meta property="og:url" content="{{ canonical_url }}">
{% endif %}
<meta property="og:site_name" content="{{ shop.name }}">

{% comment %}
Twitter card
{% endcomment %}
{% unless settings.social_twitter_link == blank %}
  <meta name="twitter:site" content="@{{ settings.social_twitter_link | split: 'twitter.com/' | last }}">
{% endunless %}
{% if template.name == 'article' and article.image %}
  <meta name="twitter:card" content="summary_large_image">
{% else %}
  <meta name="twitter:card" content="summary">
{% endif %}
{% if template.name == 'index' %}
  <meta name="twitter:title" content="{{ page_title }}">
  <meta name="twitter:description" content="{{ page_description | truncate: 140 | escape }}">
{% elsif template.name == 'product' %}
  <meta name="twitter:title" content="{{ product.title | strip_html | escape }}">
  <meta name="twitter:description" content="{{ page_description | truncate: 140 | escape }}">
  <meta name="twitter:image" content="https:{{ product | img_url: 'grande' }}">
  <meta name="twitter:image:width" content="600">
  <meta name="twitter:image:height" content="600">
{% elsif template.name == 'article' %}
  <meta name="twitter:title" content="{{ article.title | strip_html | escape }}">
  <meta name="twitter:description" content="{{ page_description | truncate: 140 | escape }}">
  {% if article.image %}
    <meta property="twitter:image" content="https:{{ article | img_url: '1024x1024' }}">
  {% endif %}
{% endif %}
