{% layout 'cart' %}

<script>
  /*TODO change to REDIRECT IFRAME FOR ADDITONAL IMAGE UPLOAD IF NEED BE ?*/
  /* REDIRECT BACK TO image-upload */
  $(function () {
    $('#admin_bar_iframe').remove();
    $('html').css('padding-top','0');

    $.get('/cart.js', function (data) {
      let custom_image_id = 0;
      let custom_image_image = '';
      $.each(data.items, function (i, v) {
        let thisItem = this;
        $.each(this.properties, function (k, v) {
          if (k === 'custom_image') {
            custom_image_id = thisItem.id;
            custom_image_image = thisItem.properties.custom_image;
          }
        });
      });
      setTimeout(function (e) {
        $.post('/cart/update.js', "updates[" + custom_image_id + "]=0", function (data) {
        }, 'json');
        window.parent.addCustomImage(custom_image_id, custom_image_image);
        window.parent.getCart();
        window.location.href = "https://alphabetpix.myshopify.com/pages/image-upload/";
      }, 500);
    }, 'json');
  })
</script>