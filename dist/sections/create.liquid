{% if section.settings.show_overlay %}
  <style>
    #Slideshow-{{ section.id }} .slideshow__overlay::before {
      background-color: {{ section.settings.overlay_color }};
      opacity: {{ section.settings.overlay_opacity }};
    }
    
    #Slideshow-{{ section.id }} .slideshow__heading,
    #Slideshow-{{ section.id }} .slideshow__button-label {
      color: {{ section.settings.overlay_text }};
    }
  </style>
{% endif %}

{% comment %}{#DATA DUMP#}{% endcomment %}
<script>
  window.products = {{ collections['letters'].products | json }};
</script>

<div data-section-id="{{ section.id }}" data-section-type="create-section">
  <div id="Slideshow-{{ section.id }}" class="slideshow">
    <div class="slideshow__slides">
      {% for block in section.blocks %}
        <div id="create__slide--{{ block.id }}" data-section-id="{{ section.id }}" data-block-id="{{ block.id }}" class="create__block slideshow__slide slideshow__slide--{{ block.id }}{% if forloop.first %} slideshow__slide--active{% endif %}{% if section.settings.show_overlay %} slideshow__overlay{% endif %}" {% unless forloop.first %}aria-hidden="true"{% endunless %} {{ block.shopify_attributes }}>
          
          
          <style>
            .slideshow__image--{{ block.id }} {
              object-position: {{ block.settings.alignment }};
              font-family: "object-fit: cover; object-position: {{ block.settings.alignment }};";
            }
            
             .frame__img--{{ block.id }} {
               background:
                       url('{{ block.settings.frame_left | img_url: '2000x' }}') left/auto 100% no-repeat, /* On top, like z-index: 4; */
                       url('{{ block.settings.frame_right | img_url: '2000x' }}') right/auto 100% no-repeat, /* like z-index: 3; */
                       url('{{ block.settings.frame_center | img_url: '2000x' }}') center/100% 100% no-repeat;
  
             }
          </style>
          {% assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
          <img class="slideshow__image slideshow__image--{{ block.id }} lazyload"
               src="{{ block.settings.image | img_url: '1000x' }}"
               data-src="{{ img_url }}"
               data-widths="[540, 900, 1512, 2048]"
               data-aspectratio="{{ block.settings.image.aspect_ratio }}"
               data-sizes="auto"
               data-parent-fit="cover"
               alt="{{ block.settings.image.alt | escape }}">
          
          <form action="/cart">
            <label for="create__input--{{ block.id }}" class="create__label">{{ block.settings.label }}</label>
            <figure class="frame faceIn scroll" data-scroll-delay="0.2s">
              <div class="frame__wrapper frame__img--{{ block.id }} tada scroll" data-scroll-delay="4s">
                <div class="frame__input">
                  <input id="create__input--{{ block.id }}" name="create__input--{{ block.id }}" type="text" class="create__input" placeholder="{{ block.settings.placeholder }}" maxlength="10" data-theme-style="{{ block.settings.theme }}">
                </div>
                <div id="create__image-wrapper--{{ block.id }}" class="create__image-wrapper">
                  {% for i in (0..8) %}
                    <a data-letter-position="{{ i }}" data-theme-style="{{ block.settings.theme }}" id="create__image--{{ block.id }}--{{ i }}" class="create__image" href="#"></a>
                  {% endfor %}
                </div>
              </div>
              <div class="frame__button">
                <div class="frame__wrapper">
                  <a href="{{ block.settings.button_link }}" class="button">{{ block.settings.button }}</a>
                </div>
              </div>
            </figure>
          </form>
        </div>
      {% endfor %}
    </div>
    
    {% if section.blocks.size > 1 %}
      <button class="slideshow__button--next critical-hide">
        <span class="visually-hidden">{{ 'sections.slider.next_slide' | t }}</span>
      </button>
      
      <div class="slideshow__buttons critical-hide" data-count="{{ section.blocks.size }}">
        {% for block in section.blocks %}
          <div id="create__slide-button--{{ block.id }}" class="slideshow__button slideshow__button--{{ section.blocks.size }}{% if block.settings.cta_link != blank %} slideshow__button--link{% endif %}">
            <button class="slideshow__button-label text-title btn--clear">
              <span class="visually-hidden">{{ 'sections.slider.slide' | t: number: forloop.index }}</span>
              {{ block.settings.theme }}
            </button>
            
            {% if block.settings.cta_link != blank %}
              <a href="{{ block.settings.cta_link }}" class="slideshow__button-cta slideshow__button-cta--mobile medium-up--hide btn" tabindex="-1">
                <span class="visually-hidden">{{ section.settings.cta | escape }}</span>
                {% include 'icon-plus' %}
              </a>
            {% else %}
              <div class="slideshow__button-cta slideshow__button-cta--mobile medium-up--hide btn" tabindex="-1">
                <span class="visually-hidden">{{ section.settings.cta | escape }}</span>
                {% include 'icon-plus' %}
              </div>
            {% endif %}
            
            {% if block.settings.cta_link != blank %}
              <a href="{{ block.settings.cta_link }}" class="slideshow__button-cta slideshow__button-cta--desktop small--hide btn" tabindex="-1">
                {{ section.settings.cta | escape }}
              </a>
            {% else %}
              <div class="slideshow__button-cta slideshow__button-cta--desktop small--hide btn" tabindex="-1">
                {{ section.settings.cta | capitalize }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      
      <button class="slideshow__button--previous critical-hide">
        <span class="visually-hidden">{{ 'sections.slider.previous_slide' | t }}</span>
      </button>
    {% endif %}
  </div>
  
  {% if section.blocks.size > 1 %}
    <div class="slideshow__nav">
      {% for block in section.blocks %}
        <button class="slideshow__nav-dot{% if forloop.first %} slideshow__nav-dot--active{% endif %} critical-clear">
          <span class="visually-hidden">{{ 'sections.slider.slide' | t: number: forloop.index }}</span>
        </button>
      {% endfor %}
    </div>
  {% endif %}
</div>

<!-- Modal -->
<div class="modal fade" id="create__modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal__body">
        ...
      </div>
    
    </div>
  </div>
</div>

<div id="create__image-preloader--{{ section.id }}" class="create__image-preloader visually-hidden">
  <div id="whitespace" class="visually-hidden"></div>
</div>

