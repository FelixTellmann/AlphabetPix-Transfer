{% if section.settings.image != blank %}
  <style>
    .hero--{{ section.id }} {
      background-position: {{ section.settings.alignment }};
    }
  </style>
{% endif %}

<div class="hero hero--{{ section.id }} hero--{{ section.settings.hero_size }} lazyload" data-bgset="{% include 'bgset', image: section.settings.image %}" data-section-id="{{ section.id }}" data-section-type="hero">
  <div class="hero__inner">
    <div class="page-width text-center">
      {% if section.settings.heading_top != blank %}
        <h2 class="h4 section__heading-top moveDown scroll" data-scroll-delay="0.1s" data-scroll-duration="0.4s">
          {{ section.settings.heading_top }}
        </h2>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h1 id="{{ section.settings.title | handle }}" class="section__heading fadeIn scroll scroll-repeat" data-scroll-delay="0.3s" data-scroll-duration="0.4s">
          {{ section.settings.heading }}
        </h1>
      {% endif %}
      
      {% if section.settings.heading_bottom != blank %}
        <div class="section__subheading moveUp scroll" data-scroll-delay="0.1s" data-scroll-duration="0.4s">
          <div class="section__heading-clip"></div>
          <div class="section__heading-wrapper">
            <div class="section__heading-seperator">
              {% include 'icon-heading-highlight' %}
            </div>
            
            <h2 class="h4 section__heading-bottom">
              {% if section.settings.heading_stars == true %}
                <span class="section__heading-star">
                  {% include 'icon-star' %}
                </span>
              {% endif %}
              {{ section.settings.heading_bottom }}
              {% if section.settings.heading_stars == true %}
                <span class="section__heading-star">
                  {% include 'icon-star' %}
                </span>
              {% endif %}
            </h2>
          
          </div>
          <div class="section__heading-clip"></div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% comment %}{#<!--@formatter:off-->#}{% endcomment %}
